annotations: # snk will use these annotations to impove the cli
  fasta:
    type: Path
    help: "Path to the fasta file."
    required: True
  bed:
    type: Path
    help: "Path to the bed file containing primer pairs"
    required: True
  reference:
    type: Path
    default: "wuhCor1.fa"
    help: "Path to the reference genome (default: wuhCor1.fa will be downloaded if not present)"
    required: False
  out:
    type: Path
    help: "Path to save the heatmap"
